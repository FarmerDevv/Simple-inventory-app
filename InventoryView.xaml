<UserControl x:Class="PlusBin.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Üst Araç Çubuğu -->
        <Border Background="#252526" CornerRadius="8" Margin="15,15,15,0">
            <StackPanel Orientation="Horizontal" Margin="15">
                <Button x:Name="AddProductButton"
                        Content="➕ Ürün Ekle"
                        Height="36"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#FF8C00"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,12,0"/>
                <TextBox x:Name="SearchBox"
                         Width="250"
                         Height="36"
                         FontSize="14"
                         FontWeight="Bold"
                         Background="#333333"
                         Foreground="White"
                         BorderBrush="#555555"
                         BorderThickness="1"
                         Padding="12,8"
                         VerticalContentAlignment="Center"
                         VerticalAlignment="Center"
                         Text=""/>
            </StackPanel>
        </Border>

        <!-- DataGrid + Preview -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid -->
            <DataGrid x:Name="ProductsDataGrid"
                      Grid.Column="0"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      RowHeight="36"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None"
                      Background="#252526"
                      Foreground="White"
                      BorderBrush="#333333"
                      BorderThickness="1"
                      FontSize="13"
                      FontWeight="Bold">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2d2d30"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#252526"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF8C00"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" />
                    <DataGridTextColumn Header="Ürün Adı" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Maliyet" Binding="{Binding CostValue, StringFormat=F2}" Width="100" />
                    <DataGridTextColumn Header="Satış" Binding="{Binding SellValue, StringFormat=F2}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Ayırıcı -->
            <GridSplitter Grid.Column="1" Width="10" HorizontalAlignment="Stretch" Background="#333333"/>

            <!-- Önizleme Alanı -->
            <Border Grid.Column="2" Background="#252526" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="ÜRÜN ÖNİZLEME"
                               Foreground="#AAAAAA"
                               FontSize="12"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <Image x:Name="PreviewImage"
                           Width="180"
                           Height="180"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"/>
                    <TextBlock x:Name="ProductNamePreview"
                               Text=""
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,15,0,5"/>
                    <TextBlock x:Name="CostPreview"
                               Text=""
                               Foreground="#88CC88"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="SellPreview"
                               Text=""
                               Foreground="#FFAA55"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>