<UserControl x:Class="PlusBin.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e">
    <Grid>
        <Border Width="400" Height="300"
                Background="#252526"
                CornerRadius="12"
                Padding="25">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="PLUS BIN • GİRİŞ" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>

                <!-- Kullanıcı Adı Etiketi -->
                <TextBlock Text="Kullanıcı"
                           Foreground="#AAAAAA"
                           FontSize="12"
                           FontStyle="Italic"
                           HorizontalAlignment="Left"
                           Margin="10,0,0,4"/>

                <!-- Kullanıcı Adı Kutusu (placeholder yok) -->
                <TextBox x:Name="UsernameBox"
                         Height="36"
                         FontSize="14"
                         FontWeight="Bold"
                         Background="#333333"
                         Foreground="White"
                         BorderBrush="#555555"
                         BorderThickness="1"
                         Padding="10,8"
                         VerticalContentAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,0,0,16"/>

                <!-- Şifre Etiketi -->
                <TextBlock Text="Şifre"
                           Foreground="#AAAAAA"
                           FontSize="12"
                           FontStyle="Italic"
                           HorizontalAlignment="Left"
                           Margin="10,0,0,4"/>

                <!-- Şifre Kutusu -->
                <PasswordBox x:Name="PasswordBox"
                             Height="36"
                             FontSize="14"
                             FontWeight="Bold"
                             Background="#333333"
                             Foreground="White"
                             BorderBrush="#555555"
                             BorderThickness="1"
                             Padding="10,8"
                             VerticalContentAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="0,0,0,16"/>

                <!-- Yuvarlak Buton -->
                <Border CornerRadius="6" 
                        Background="#FF8C00" 
                        Height="36"
                        Margin="0,0,0,16">
                    <Button x:Name="LoginButton"
                            Content="Giriş Yap"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </Border>

                <TextBlock x:Name="ErrorMessage"
                           Foreground="#FF5555"
                           FontSize="12"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Text=""
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>